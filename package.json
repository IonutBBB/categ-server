{
  "name": "NodeBoilerpate",
  "version": "0.0.1",
  "main": "index.js",
  "author": {
    "name": "MCRO ENGINEERING",
    "email": "contact@mcro-e.com"
  },
  "repository": "git@bitbucket.org:findmyteam/shserver.git",
  "license": "ISC",
  "description": "SHServer API in NodeJS",
  "engines": {
    "node": "~6.10.1",
    "npm": "3.10.7"
  },
  "dependencies": {
    "JSONStream": "^1.3.3",
    "app-root-path": "^2.1.0",
    "async": "^2.6.1",
    "bcrypt": "^3.0.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.3",
    "btoa": "^1.2.1",
    "chai": "^4.1.2",
    "concurrently": "^3.6.1",
    "cron": "^1.3.0",
    "express": "^4.16.3",
    "forever": "^0.15.3",
    "js-yaml": "^3.12.0",
    "jsonwebtoken": "^8.3.0",
    "mocha": "^5.2.0",
    "mysql": "^2.16.0",
    "mysql2": "^1.6.1",
    "nodemailer": "^4.6.7",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "pgtools": "^0.3.0",
    "sequelize": "^4.38.0",
    "socket.io": "^2.1.1",
    "swagger-jsdoc": "^3.0.2",
    "v8-profiler": "^5.7.0",
    "validator": "^10.5.0",
    "walk-sync": "^0.3.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "better-npm-run": "0.1.1",
    "cross-env": "^5.2.0",
    "eslint": "5.3.0",
    "eslint-config-airbnb": "17.0.0",
    "eslint-config-airbnb-base": "13.0.0",
    "eslint-plugin-import": "2.13.0",
    "jsinspect": "^0.12.7",
    "nodemon": "^1.18.3"
  },
  "scripts": {
    "local": "better-npm-run start-local",
    "local-profiler": "better-npm-run start-local-profiler",
    "prod": "better-npm-run node-start-prod",
    "restartprod": "better-npm-run restart-prod",
    "stopprod": "better-npm-run stop-prod",
    "prod-profiler": "better-npm-run start-prod-profiler",
    "lint": "eslint -c .eslintrc src",
    "jsinspect": "jsinspect -t 30 -i ./src/endpoints ./src/models",
    "test": "mocha ./src/test/runner.js",
    "check": "npm run lint && npm run jsinspect && npm run test"
  },
  "betterScripts": {
    "start-local": {
      "command": "./node_modules/.bin/nodemon -V -e 'js,yml,json' ./src/index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "local"
      }
    },
    "start-local-profiling": {
      "command": "./node_modules/.bin/nodemon -V -e 'js,yml,json' ./src/index.js profiling",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "local"
      }
    },
    "node-start-prod": {
      "command": "node ./src/index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "prod"
      }
    },
    "start-prod": {
      "command": "forever ./src/index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "prod"
      }
    },
    "stop-prod": {
      "command": "forever stop ./src/index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "prod"
      }
    },
    "restart-prod": {
      "command": "forever restart ./src/index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "prod"
      }
    }
  }
}
